{% extends theme|default('ThemeBootstrapBundle::layout.html.twig') %}

{% block title %}Stacked List - Bootstrap Twiter Theme{% endblock %}

{% block content %}

    <div class="page-header">
        <h1>Listing <small>or <a href="{{ path('ThemeBootstrapBundle_form') }}">add new</a></small></h1>
    </div>

    <div id="no_records" class="alert-message warning">
        <p>
            {% trans %}No records found. You can filter again or{% endtrans %}
        </p>
        <p>
            <a href=""><button type="submit" class="btn primary">{% trans %}Add New{% endtrans %}</button></a>
        </p>
    </div>

    <div class="row">

        <!-- List -->
        <div class="span12 columns">

            <div class="stacked_list_checkbox">
                <input type="checkbox" id="checkall"/> Select All
            </div>
            
            <div>

                <div class="stacked_list has_details">
                    <ul class="stacked_list_menu details_fixed">
                        <li><a href="">View</a></li>
                        <li><a href="">Edit</a></li>
                        <li><a href="">Delete</a></li>
                    </ul>
                    <h3><input type="checkbox"/> Your One</h3>
                    <p class="details_fixed">
                        speaks <strong>English</strong>, borned in <strong>10/07/2011</strong>
                    </p>
                </div>

                <div class="stacked_list has_details">
                    <ul class="stacked_list_menu details_fixed">
                        <li><a href="">View</a></li>
                        <li><a href="">Edit</a></li>
                        <li><a href="">Delete</a></li>
                    </ul>
                    <h3><input type="checkbox"/> Joe Sixpack</h3>
                    <p class="details_fixed">
                        speaks <strong>English</strong>, borned in <strong>11/28/2008</strong>
                    </p>
                </div>

                <div class="stacked_list has_details">
                    <ul class="stacked_list_menu details_fixed">
                        <li><a href="">View</a></li>
                        <li><a href="">Edit</a></li>
                        <li><a href="">Delete</a></li>
                    </ul>
                    <h3><input type="checkbox"/> Stu Dent</h3>
                    <p class="details_fixed">
                        speaks <strong>Portuguese</strong>, borned in <strong>03/14/2003</strong>
                    </p>
                </div>

                <div class="stacked_list has_details">
                    <ul class="stacked_list_menu details_fixed">
                        <li><a href="">View</a></li>
                        <li><a href="">Edit</a></li>
                        <li><a href="">Delete</a></li>
                    </ul>
                    <h3><input type="checkbox"/> John Doe</h3>
                    <p class="details_fixed">
                        speaks <strong>Portuguese</strong>, borned in <strong>09/01/2000</strong>
                    </p>
                </div>
            </div>

            <div class="row">

                <div class="span5 columns batch_action">
                    Actions
                    <select name="batchSelect" id="batchSelect" class="small">
                        <option></option>
                        <option>Delete</option>
                    </select>
                    <button type="submit" class="btn primary">Add New</button>
                </div>

                <div class="span7 columns last pagination">

                    <ul>
                        <li class="prev disabled"><a href="#">&larr; Previous</a></li>
                        <li class="active"><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li class="next"><a href="#">Next &rarr;</a></li>
                    </ul>

                </div>

            </div>

        </div>

        <!-- Filter -->
        <div class="span4 columns">

            <form action="" class="form-stacked">
                <fieldset>
                    <legend>Filter</legend>

                    <div class="clearfix">
                        <label for="firstname">First Name</label>
                        <div class="input">
                            <input class="medium" id="firstname" name="firstname" type="text" />
                        </div>
                    </div><!-- /clearfix -->

                    <div class="clearfix">
                        <label for="latstname">Last Name</label>
                        <div class="input">
                            <input class="medium" id="lastname" name="lastname" type="text" />
                        </div>
                    </div><!-- /clearfix -->

                    <div class="clearfix">
                        <label for="language">Language</label>
                        <div class="input">
                            <select name="language" id="language" class="medium">
                                <option></option>
                                <option>English</option>
                                <option>Portugues</option>
                            </select>
                        </div>
                    </div><!-- /clearfix -->

                    <div class="clearfix">
                        <label for="birthday">Birthday</label>
                        <div class="input">
                            from<br/>
                            <input class="small date" id="birthday_to" name="birthday_to" type="text" /><br/>
                            to<br/>
                            <input class="small date" id="birthday_from" name="birthday_from" type="text" />
                        </div>
                    </div><!-- /clearfix -->

                </fieldset>
                <div class="actions">
                <button type="submit" class="btn primary">Filter</button>&nbsp;<button type="reset" class="btn">Reset</button>
                </div>
            </form>


        </div>

    </div>

{% endblock %}