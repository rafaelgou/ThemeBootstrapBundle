{% extends theme|default('ThemeBootstrapBundle::layout.html.twig') %}

{% block title %}Stacked List - Bootstrap Twiter Theme{% endblock %}

{% block add_stylesheet %}
        <link rel="stylesheet" href="{{ asset('bundles/themebootstrap/bootstrap/css/docs.css') }}" type="text/css" media="screen" />
        <link rel="stylesheet" href="{{ asset('bundles/themebootstrap/bootstrap/js/google-code-prettify/prettify.css') }}" type="text/css" media="screen" />
{% endblock %}
{% block add_javascript %}
        <script type="text/javascript" src="{{ asset('bundles/themebootstrap/bootstrap/js/google-code-prettify/prettify.js') }}"></script>
{% endblock %}

{% block content %}

    <div class="page-header">
        <h1>Listing <small>or <a href="{{ path('ThemeBootstrapBundle_form') }}">add new</a></small></h1>
    </div>

    <div class="row">

        <div class="span9">

            <div class="row">

                <div class="span9">
                    <div id="no_records" class="alert">
                        <p>
                            No records found. You can filter again o
                            <a href="" class="btn primary">Add New</a>
                        </p>
                    </div>
                </div>

                <form action="" method="post" class="form-inline">
                    <!-- List -->
                    <div class="span9">

                        <div class="stacked_list_checkbox">
                            <input type="checkbox" id="checkall" onclick="checkAllCheckboxes(this, 'selected_objects_')" /> Select All
                        </div>

                        <div class="stacked_list_container">

                            <div class="stacked_list has_details">
                                <input type="checkbox" id="selected_objects_1" name="selected_objects[1]"/>
                                <ul class="stacked_list_menu details_fixed">
                                    <li><a href="">View</a></li>
                                    <li><a href="">Edit</a></li>
                                    <li><a href="">Delete</a></li>
                                </ul>
                                <h3>Your One</h3>
                                <p class="details_fixed">
                                    speaks <strong>English</strong>, borned in <strong>10/07/2011</strong>
                                </p>
                            </div>

                            <div class="stacked_list has_details">
                                <input type="checkbox" id="selected_objects_2" name="selected_objects[2]"/>
                                <ul class="stacked_list_menu details_fixed">
                                    <li><a href="">View</a></li>
                                    <li><a href="">Edit</a></li>
                                    <li><a href="">Delete</a></li>
                                </ul>
                                <h3>Joe Sixpack</h3>
                                <p class="details_fixed">
                                    speaks <strong>English</strong>, borned in <strong>11/28/2008</strong>
                                </p>
                            </div>

                            <div class="stacked_list has_details">
                                <input type="checkbox" id="selected_objects_3" name="selected_objects[3]"/>
                                <ul class="stacked_list_menu details_fixed">
                                    <li><a href="">View</a></li>
                                    <li><a href="">Edit</a></li>
                                    <li><a href="">Delete</a></li>
                                </ul>
                                <h3>Stu Dent</h3>
                                <p class="details_fixed">
                                    speaks <strong>Portuguese</strong>, borned in <strong>03/14/2003</strong>
                                </p>
                            </div>

                            <div class="stacked_list has_details">
                                <input type="checkbox" id="selected_objects_4" name="selected_objects[4]"/>
                                <ul class="stacked_list_menu details_fixed">
                                    <li><a href="">View</a></li>
                                    <li><a href="">Edit</a></li>
                                    <li><a href="">Delete</a></li>
                                </ul>
                                <h3>John Doe</h3>
                                <p class="details_fixed">
                                    speaks <strong>Portuguese</strong>, borned in <strong>09/01/2000</strong>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="span4 columns batch_action">
                        Actions
                        <select name="batchSelect" id="batchSelect" class="small">
                            <option></option>
                            <option>Delete</option>
                        </select>
                        <button type="submit" class="btn">go</button>
                    </div>
                    <div class="span4 columns last pagination">
                        <ul>
                            <li class="prev disabled"><a href="#">&larr; Previous</a></li>
                            <li class="active"><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li class="next"><a href="#">Next &rarr;</a></li>
                        </ul>
                    </div>
                </form>
            </div>
        </div>

        <!-- Filter -->
        <div class="span3">

            <div class="well">

                <form action="" class="form-stacked">
                    <fieldset class="">

                        <legend>Filter</legend>

                        <div class="control-group">
                            <label class="control-label" for="firstname">First Name</label>
                            <div class="controls">
                                <input class="span2" id="firstname" name="firstname" type="text" />
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label" for="latstname">Last Name</label>
                            <div class="controls">
                                <input class="span2" id="lastname" name="lastname" type="text" />
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label" for="language">Language</label>
                            <div class="controls">
                                <select name="language" id="language" class="span2">
                                    <option></option>
                                    <option>English</option>
                                    <option>PortuguÃªs</option>
                                </select>
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label" for="birthday">Birthday</label>
                            <div class="controls">
                                <div class="input-prepend" style="float:left;">
                                    from<br/>
                                    <span class="add-on"><i class="icon-calendar"></i></span><input type="date" id="birthday_from" class="span1"/>
                                </div>
                                <div class="input-prepend" style="float:left;margin-left: 3px;">
                                    to<br/>
                                    <span class="add-on"><i class="icon-calendar"></i></span><input type="date" id="birthday_to" class="span1" />
                                </div>
                            </div>
                        </div>

                    </fieldset>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Filter</button>
                        <button type="reset" class="btn">Reset</button>
                    </div>
                </form>

            </div>
        </div>

    </div>

{% endblock %}